<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#BD797C">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/icdonut"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="90dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicia sesión para continuar"
            android:textColor="@color/gris"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C O R R E O"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textCorreoLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:startIconDrawable="@drawable/email"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editCorreoLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rosab"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P A S S W O R D"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textPasswdLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:startIconDrawable="@drawable/segurity"
            app:endIconMode="password_toggle"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPasswdLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rosab"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="@color/rosaf"
            android:text="INICIAR"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnContraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#00F4F1F1"
            android:text="¿Olvidaste la contraseña?"
            android:textColor="@color/gris"/>

        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#00F4F1F1"
            android:text="Registrarme"
            android:textColor="@color/gris"/>





    </LinearLayout>

</LinearLayout>