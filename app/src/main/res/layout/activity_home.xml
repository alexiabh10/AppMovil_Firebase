<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/coffe"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/icdonut"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MENU DE INICIO"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="30sp"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textIDM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:startIconDrawable="@drawable/pin"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rosab"
            android:inputType="text"
            android:hint="ID"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textNombreM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:startIconDrawable="@drawable/coffee"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rosab"
            android:inputType="text"
            android:hint="Nombre"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textPrecioM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:startIconDrawable="@drawable/money"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_Precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rosab"
            android:inputType="text"
            android:hint="Precio"
            />
    </com.google.android.material.textfield.TextInputLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btConsultar"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/refresh"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/rosaf"/>


    <Button
        android:id="@+id/btGuardar"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/add"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/rosaf"/>



    <Button
        android:id="@+id/btActulizar"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/edit"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/rosaf"/>

    <Button
        android:id="@+id/btEliminar"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/delete"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/rosaf"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvConsultar"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp"/>





</LinearLayout>